---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro'
import TextHero from '../components/TextHero.astro';
const allPosts = await Astro.glob('../pages/posts/*.mdx');
const pageTitle="Oonagability Triffeliz Blog - Latest Posts and News"
---

<BaseLayout pageTitle={pageTitle}>
    <TextHero heading="Blog" blurb="Your ultimate resource for insightful articles about our varied products and services. Here, we share intriguing stories, thoughtful perspectives, and expert advice across our diverse range of industries."     />
    <section class="w-full py-8 bg-white sm:py-12 md:py-16">
        <div class="px-10 mx-auto max-w-7xl">
            <div class="flex items-center justify-between w-full pb-5 mb-8 border-b border-gray-200">
                <h1 class="text-3xl font-bold text-gray-800">Latest Posts</h1>
            </div>
            <div class="grid grid-cols-12 gap-6">
                {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />)}   
            </div>
        </div>
    </section>
</BaseLayout>