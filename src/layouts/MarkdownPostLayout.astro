---
import BaseLayout from './BaseLayout.astro';
import { Picture } from '@astrojs/image/components';
import TextHero from '../components/TextHero.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <TextHero 
        heading={frontmatter.heading} 
        blurb={frontmatter.description}
    />
    <section>
		<div class="bg-white px-6 py-16 lg:px-16 max-w-4xl mx-auto">
            <p>{frontmatter.pubDate.slice(0,10)}</p>
            <p class="mb-6">Written by: {frontmatter.author}</p>
            <Picture src={frontmatter.image.url} alt={frontmatter.image.alt} widths={[400, 800, 1200, 1456]} aspectRatio={1456/816} />
            <article class="prose mt-6 max-w-prose mx-auto">
                <slot />
            </article>  
        </div>
    </section>
</BaseLayout>